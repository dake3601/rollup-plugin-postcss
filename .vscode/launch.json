  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceRoot}",
      "stopOnEntry": false,
      "args": ["--watch", "index.test.js"],
      "runtimeExecutable": null,
      "runtimeArgs": ["--nolazy", "--inspect", "--experimental-vm-modules"],
      "env": {
        "NODE_ENV": "development",
      },
      "sourceMaps": true,
      "outputCapture": "std",
      "console": "integratedTerminal"
    },
  ]
}
